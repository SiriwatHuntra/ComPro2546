pass_word = '1234'
user_name = 'admin'
while True:
  user = input('enter user name : ')
  password = input('enter password : ')
  if pass_word == password and user_name == user :
    user_name = input('enter new user name : ')
    pass_word = input('enter new password : ')
    break
print('user name is :',user_name)
print('password is :',pass_word)
